<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edt_add_food"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:layout_marginTop="16dp"
            android:hint="Nhập tên món..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/edt_add_description"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:layout_marginTop="16dp"
            android:hint="Nhập mô tả..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/edt_add_discount"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:layout_marginTop="16dp"
            android:hint="Nhập miễn giảm..."
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>
        <EditText
            android:id="@+id/edt_add_price"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:layout_marginTop="16dp"
            android:hint="Nhập giá tiền..."
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_choose_food"
                android:text="Chọn ảnh"
                android:background="@drawable/bg_white_corner_16"
                android:textSize="10sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_upload_food"
                android:text="Cập nhật"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>